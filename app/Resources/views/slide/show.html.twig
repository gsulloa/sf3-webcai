{% extends 'base.html.twig' %}

{% block body %}
    <h1>Slide</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slide.id }}</td>
            </tr>
            <tr>
                <th>Posicion</th>
                <td>{{ slide.posicion }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ slide.path }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('slide_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('slide_edit', { 'id': slide.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
