{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entrada list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Cuerpo</th>
                <th>Fecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entrada in entradas %}
            <tr>
                <td><a href="{{ path('entrada_show', { 'id': entrada.id }) }}">{{ entrada.id }}</a></td>
                <td>{{ entrada.titulo }}</td>
                <td>{{ entrada.slug }}</td>
                <td>{{ entrada.cuerpo }}</td>
                <td>{% if entrada.fecha %}{{ entrada.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entrada_show', { 'id': entrada.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entrada_edit', { 'id': entrada.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entrada_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
