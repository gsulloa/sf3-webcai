{% extends 'base.html.twig' %}

{% block body %}
    <h1>Elemento</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ elemento.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ elemento.titulo }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ elemento.path }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('elemento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('elemento_edit', { 'id': elemento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
