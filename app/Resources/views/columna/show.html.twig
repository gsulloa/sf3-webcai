{% extends 'base.html.twig' %}

{% block body %}
    <h1>Columna</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ columna.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ columna.titulo }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ columna.slug }}</td>
            </tr>
            <tr>
                <th>Cuerpo</th>
                <td>{{ columna.cuerpo }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if columna.fecha %}{{ columna.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Publico</th>
                <td>{% if columna.publico %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if columna.createdAt %}{{ columna.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lastupdateat</th>
                <td>{% if columna.lastUpdateAt %}{{ columna.lastUpdateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('columna_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('columna_edit', { 'id': columna.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
