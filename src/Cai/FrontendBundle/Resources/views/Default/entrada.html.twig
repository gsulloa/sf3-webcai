{% extends 'CaiFrontendBundle::layout.html.twig' %}
{% block title %}
    {{ entrada.titulo }}
{% endblock %}
{% block content %}
    <img class="center-block img-responsive"  src="{{ asset('uploads/biblioteca/imagenes/' ~ entrada.imagen.filenamebinary ~ '/' ~ entrada.imagen.filename) }}" />
    <h1 class="text-center">{{ entrada.titulo }}</h1>
    <p class="text-right">{{ entrada.user }} ({{ entrada.fecha | date('Y-m-d h:i:s') }})</p>
    <p>
        {{ entrada.cuerpo | raw }}
    </p>

{% endblock %}