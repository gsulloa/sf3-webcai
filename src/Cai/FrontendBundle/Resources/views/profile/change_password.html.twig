{% extends 'CaiFrontendBundle::layout.html.twig' %}
{% form_theme form with [
'bootstrap_3_horizontal_layout.html.twig'
] %}
{% block content %}
    <h1>Cambiar Contraseña</h1>
    <h4>Usuario: {{ user }}</h4>

    {{ form_start(form) }}
    {{ form_row(form.password,{'attr':{'placeholder':'password'} }) }}
    <div class="form-group">
    <label class="col-sm-2 control-label required" for="second_password">Repite tu contraseña</label>
    <div class="col-sm-10">
        <input type="password" id="second_password" name="second_password" required="required" maxlength="255" class="form-control" placeholder="password">
    </div></div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Enviar" class="btn-primary btn" />
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
