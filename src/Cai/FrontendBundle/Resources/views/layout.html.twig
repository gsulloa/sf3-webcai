{% extends 'CaiFrontendBundle::base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
    <style>
        .fb-page,
        .fb-page span,
        .fb-page span iframe[style] {
            width: 100% !important;
        }
    </style>

{% endblock %}
{% block javascripts %}

    <script>
        $(document).ready(function(){
            $('.auspicios-slider-1').bxSlider({
                ticker: true,
                speed: {{ auspicios_1.slides | length * auspicios_1.time }},
                minSlides: 1,
                maxSlides: 1,
                tickerHover: true,
                useCSS: false,
                slideMargin: 15,
                slideWidth: 250,
                slideHeight: 50
            });
            $('.auspicios-slider-2').bxSlider({
                ticker: true,
                speed: {{ auspicios_2.slides | length * auspicios_2.time }},
                minSlides: 1,
                maxSlides: 1,
                tickerHover: true,
                useCSS: false,
                slideMargin: 15,
                slideWidth: 250,
                slideHeight: 50
            });
        });

    </script>
{% endblock %}
{% block body %}

    <div class="container" style="background: white">
        <div class="row">
            <div class="col-md-9">
                {% block content %}
                {% endblock %}
            </div>
            <div class="col-md-3">
                <div class="row">
                    <h1 class="text-center">Auspiciadores</h1>
                    <ul class="auspicios-slider-1">
                        {% for auspicio in auspicios_1.slides %}
                            <li>
                                <a href="{{ auspicio.path }}"><img class="img-responsive" src="{{ asset('uploads/biblioteca/imagenes/' ~ auspicio.imagen.filenamebinary ~ '/auspicio-' ~ auspicio.imagen.filename) }}" /></a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="row">
                    <ul class="auspicios-slider-2">
                        {% for auspicio in auspicios_2.slides %}
                            <li>
                                <a href="{{ auspicio.path }}"><img class="img-responsive" src="{{ asset('uploads/biblioteca/imagenes/' ~ auspicio.imagen.filenamebinary ~ '/auspicio-' ~ auspicio.imagen.filename) }}" /></a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="row" style="width:100%;margin:auto">
                    <h1 class="text-center">Facebook</h1>
                    <hr>
                    <div class="fb-page" data-href="https://www.facebook.com/caiuc/" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/caiuc/"><a href="https://www.facebook.com/caiuc/">Centro de Alumnos de Ingenier√≠a - CAi UC</a></blockquote></div></div>
                </div>
                <hr>
                <div class="row" style="width:100%;margin:auto">
                    <h1 class="text-center">Twitter</h1>
                    <hr>
                    <a class="twitter-timeline" href="https://twitter.com/CAiPUC" data-widget-id="454003571264978944">Tweets por el @CAiPUC.</a>
                    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

                </div>
            </div>
        </div>
    </div>


{% endblock %}





