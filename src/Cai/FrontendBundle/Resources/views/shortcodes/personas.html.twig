{% set n = 12 // data.por_fila %}
{% for persona in data.personas %}
    {% if loop.index0  % data.por_fila == 0 %}
        <div class="row">
    {% endif %}
    <div class="col-md-{{ n }}">
        {% if n == 4 %}
            <div class="row">
                <img class="img-responsive img-rounded center-block" style="max-width: 80%" src="{{ asset('uploads/biblioteca/persona/') ~ persona.filename }}">
            </div>
            <div class="row">
                <div class="pull-left" style="padding-left: 15%">
                    <h4>{{ persona.nombre }}</h4>
                    {% if persona.descripcionCorta %}<h5>{{ persona.descripcionCorta }}</h5>{% endif %}
                    {% if persona.mail %}<h5><i class="fa fa-envelope"></i> {{ persona.mail }}</h5>{% endif %}
                </div>
                <div class="pull-right">

                </div>
            </div>
            {% if persona.descripcion %}
                <div class="row">
                    <p class="text-info">{{ persona.descripcion }}</p>
                </div>
            {% endif %}
        {% endif %}
    </div>
    {% if loop.index % data.por_fila == 0 or loop.last %}
        </div>
    {% endif %}
{% endfor %}