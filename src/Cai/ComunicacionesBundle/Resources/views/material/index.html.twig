{% set  base = "layout-no-sidebar.html.twig" %}
{% if is_mobile_view() or is_tablet_view() or is_mobile() or is_tablet() %}
    {% set base = "base.mob.twig" %}
{% endif %}
{% extends 'CaiFrontendBundle::' ~ base %}

{% block content %}
    <h1>Material list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Etiqueta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td><a href="{{ path('material_show', { 'id': material.id }) }}">{{ material.id }}</a></td>
                <td>{{ material.etiqueta }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('material_show', { 'id': material.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('material_edit', { 'id': material.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('material_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
