            <form method="post" action="{{ path('solicitud_rechazar',{'id': solicitud.id}) }}">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="mensaje{{ solicitud.id }}">Raz√≥n</label>
                    <div class="col-sm-10">
                        <textarea id="mensaje{{ solicitud.id }}" name="mensaje" class="form-control" rows="10" required></textarea>
                    </div>
                </div>
                <div class=" col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Enviar" class="btn btn-primary" style="width: 100%;margin: 0 0 15px 0">
