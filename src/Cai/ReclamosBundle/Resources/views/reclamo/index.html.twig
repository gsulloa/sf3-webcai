{% extends 'CaiWebBundle::base.html.twig' %}

{% block body %}
    <h1>Reclamos</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Mail</th>
                <th>Tipo</th>
                <th>Texto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamo in reclamos | reverse%}
            <tr>
                <td><a href="{{ path('reclamo_show', { 'id': reclamo.id }) }}">{{ reclamo.id }}</a></td>
                <td>{{ reclamo.nombre }}</td>
                <td>{{ reclamo.email }}</td>
                <td>{{ reclamo.tipo }}</td>
                <td>{{ reclamo.texto }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reclamo_show', { 'id': reclamo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reclamo_edit', { 'id': reclamo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reclamo_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
