{% extends 'CaiWebBundle::base.html.twig' %}

{% block body %}
    <h1>Pagina edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('pagina_index') }}">Back to the list</a>
        </li>
        {% if is_granted('ROLE_COMUNICACIONES') and is_granted('ROLE_DIRECTIVA') %}
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
{% block javascripts %}
    {% include 'CaiWebBundle:utils:ckeditor.html.twig' with {'id': 'pagina_cuerpo' } %}
    {% include 'CaiWebBundle:utils:datetimepicker.html.twig' with {'id': 'pagina_fecha' } %}
{% endblock %}
