{% extends 'CaiWebBundle::base.html.twig' %}
{% form_theme form with [
'bootstrap_3_horizontal_layout.html.twig'
] %}

{% block body -%}
    <h1>Crear Entrada</h1>

    {{ form_start(form) }}
    {{ form_row(form.titulo) }}
    {{ form_row(form.cuerpo) }}
    {{ form_row(form.fecha) }}
    <div class="row form-group" id="0">
        <div class="col-md-4 col-sm-offset-2">
            <div id="slide_0" class="slide_img">
                <img class="img" id="img_slide_0" src="{{ asset('public/images/no-foto.png') }}" >
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="img_selector btn btn-primary" id="img_selector_slide_0">Escoger im√°gen</div>
            </div>
            <input name="img_slide_0" id="img_slide_0" type="hidden">
        </div>
    </div>
    {{ form_row(form.categorias) }}
    <input type="submit" value="Crear" />
    {{ form_end(form) }}

    {% include 'CaiWebBundle:ImageSelector:selector.html.twig' %}
    <ul class="record_actions">
        <li>
            <a href="{{ path('entrada_index') }}">
                Volver
            </a>
        </li>
    </ul>
{% endblock %}
{% block stylesheets %}
    <style>
        .slide_img{
            width:220px;
            height:220px;
            padding:10px;
            border:1px solid #aaaaaa;
        }
        .img{
            max-height:200px;
            max-width: 200px;
        }

    </style>
    <link rel="stylesheet" href="{{ asset('public/css/image_selector.css') }}" type="text/css">
{% endblock %}
{% block javascripts %}
    {% include 'CaiWebBundle:utils:ckeditor.html.twig' with {'id': 'entrada_cuerpo' } %}
    {% include 'CaiWebBundle:utils:datetimepicker.html.twig' with {'id': 'entrada_fecha' } %}
    <script type="text/javascript" src="{{ asset('public/js/image_selector.js') }}"></script>
    {% include 'CaiWebBundle:utils:scrolling_image_selector.html.twig' %}
{% endblock %}