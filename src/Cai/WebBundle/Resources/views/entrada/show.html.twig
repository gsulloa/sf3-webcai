{% extends 'CaiWebBundle::base.html.twig' %}
{% block body -%}
    <h1>Entrada</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entrada.id }}</td>
        </tr>
        <tr>
            <th>Titulo</th>
            <td>{{ entrada.titulo }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entrada.slug }}</td>
        </tr>
        <tr>
            <th>Cuerpo</th>
            <td>{{ entrada.cuerpo | raw }}</td>
        </tr>
        <tr>
            <th>Fecha</th>
            <td>{{ entrada.fecha|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('entrada_index') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('entrada_edit', { 'id': entrada.id }) }}">
                Edit
            </a>
        </li>
    {% if is_granted('ROLE_COMUNICACIONES') and is_granted('ROLE_DIRECTIVA') %}
        <li>{{ form(delete_form) }}</li>
        {% endif %}
    </ul>
{% endblock %}