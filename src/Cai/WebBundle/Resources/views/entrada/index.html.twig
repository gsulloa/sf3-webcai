{% extends 'CaiWebBundle::base.html.twig' %}

{% block body %}
    <h1>Entradas</h1>
    <ul class="pull-right">
        <li>
            <a class="btn btn-primary" href="{{ path('entrada_new') }}">
                Crear nueva Entrada
            </a>
        </li>
    </ul>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(entradas, 'Titulo', 'entrada.titulo') }}</th>
            <th>Imágen</th>
            <th>{{ knp_pagination_sortable(entradas, 'Autor', 'entrada.user') }}</th>
            <th>Categorías</th>
            <th>{{ knp_pagination_sortable(entradas, 'Fecha publicacion', 'entrada.fecha') }}</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entrada in entradas %}
            <tr>
                <td>{{ entrada.titulo }}</td>
                <td>{% if entrada.imagen is not null %}<img src="{{ asset('uploads/biblioteca/imagenes/') }}{{ entrada.imagen.filenamebinary }}/small-{{ entrada.imagen.filename }}">{% endif %}</td>
                <td>{{ entrada.user }}</td>
                <td>
                    <ul>
                        {% for categoria in entrada.categorias %}
                            <li>{{ categoria }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{% if entrada.fecha %}{{ entrada.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entrada_show', { 'id': entrada.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entrada_edit', { 'id': entrada.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        {{ knp_pagination_render(entradas) }}
    </div>

{% endblock %}