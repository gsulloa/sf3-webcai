{% extends 'CaiWebBundle::base.html.twig' %}

{% block body %}
    <h1>UserProfile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ userProfile.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ userProfile.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ userProfile.apellido }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ userProfile.mail }}</td>
            </tr>
            <tr>
                <th>Celular</th>
                <td>{{ userProfile.celular }}</td>
            </tr>
            <tr>
                <th>Nidentificador</th>
                <td>{{ userProfile.nIdentificador }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('userprofile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('userprofile_edit', { 'id': userProfile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
